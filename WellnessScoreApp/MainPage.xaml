<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WellnessScoreApp.MainPage"
             Title=""
             NavigationPage.HasNavigationBar="False">

    <ScrollView
        x:Name="MainScrollView">
        <Grid
            RowDefinitions="Auto, Auto, Auto, Auto, Auto"
            RowSpacing="8">
            <Grid
                Grid.Row="0"
                ColumnDefinitions="*,*"
                ColumnSpacing="12"
                Padding="6">
                <Frame
                    x:Name="FrameMale"
                    Grid.Column="0"
                    BorderColor="Gray"
                    CornerRadius="12"
                    Padding="6"
                    HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMaleTapped" />
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout>
                        <Image
                            Source="male"
                            HeightRequest="24"
                            />
                        <Label
                            Text="Male"
                            FontSize="Caption"
                            HorizontalOptions="Center"
                            />
                    </VerticalStackLayout>
                </Frame>
                <Frame
                    x:Name="FrameFemale"
                    Grid.Column="1"
                    BorderColor="Gray"
                    CornerRadius="12"
                    Padding="6"
                    HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnFemaleTapped" />
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout>
                        <Image
                            Source="female"
                            HeightRequest="24"
                            />
                        <Label
                            Text="Female"
                            FontSize="Caption"
                            HorizontalOptions="Center"
                            />
                    </VerticalStackLayout>
                </Frame>
            </Grid>
            <VerticalStackLayout
                Grid.Row="1"
                Spacing="4">
                <Grid
                    ColumnDefinitions="*,Auto">
                    <Label
                        Text="Sleep (hours)"
                        FontSize="Body"
                        VerticalOptions="Center"
                        />
                    <Label
                        Grid.Column="1"
                        Text="{Binding Source={x:Reference SliderSleep}, Path=Value, StringFormat='{0:F1} hrs'}"
                        FontSize="Body"
                        FontAttributes="Bold"
                        VerticalOptions="Center"
                        x:Name="LblSleep"
                        />
                </Grid>
                <Slider
                    x:Name="SliderSleep"
                    Minimum="0"
                    Maximum="12"
                    Value="7"
                    BackgroundColor="White"
                    />
            </VerticalStackLayout>
            <VerticalStackLayout
                Grid.Row="2"
                Spacing="4">
                <Grid
                    ColumnDefinitions="*,Auto">
                    <Label
                        Text="Stress (0=calm, 10=stressed)"
                        FontSize="Body"
                        VerticalOptions="Center"
                        />
                    <Label
                        Grid.Column="1"
                        Text="{Binding Source={x:Reference SliderStress}, Path=Value, StringFormat='{0:F0}'}"
                        FontSize="Body"
                        FontAttributes="Bold"
                        VerticalOptions="Center"
                        x:Name="LblStress"
                        />
                </Grid>
                <Slider
                    x:Name="SliderStress"
                    Minimum="0"
                    Maximum="10"
                    Value="4"
                    BackgroundColor="White"
                    />
            </VerticalStackLayout>
            <VerticalStackLayout
                Grid.Row="3"
                Spacing="4">
                <Grid
                    ColumnDefinitions="*,Auto">
                    <Label
                        Text="Activity (min)"
                        FontSize="Body"
                        VerticalOptions="Center"
                        />
                    <Label
                        Grid.Column="1"
                        Text="{Binding Source={x:Reference SliderActivity}, Path=Value, StringFormat='{0:F0} min'}"
                        FontSize="Body"
                        FontAttributes="Bold"
                        VerticalOptions="Center"
                        x:Name="LblActivity"
                        />
                </Grid>
                <Slider
                    x:Name="SliderActivity"
                    Minimum="0"
                    Maximum="120"
                    Value="30"
                    BackgroundColor="White"
                    />
            </VerticalStackLayout>
            <VerticalStackLayout
                Grid.Row="4"
                Spacing="8"
                Padding="0,8,0,0">
                <Button
                    x:Name="BtnSubmit"
                    Text="See my score"
                    FontSize="Body"
                    />
            </VerticalStackLayout>
        </Grid>
    </ScrollView>

</ContentPage>
